    <script>
        // Check if age verification has been completed
        if (!sessionStorage.getItem('ageVerified')) {
            window.location.href = 'age-verification.html';
        }

        // Invitation Modal
        let selectedBottle = '';
        let isDirectPurchase = false;

        function showPurchaseModal(bottleName, directPurchase) {
            selectedBottle = bottleName;
            isDirectPurchase = directPurchase;
            
            if (directPurchase) {
                // For Ancroft 7, direct purchase
                alert(`Thank you for your interest in ${bottleName}!\n\nThis bottle is available for direct purchase at Â£95.\n\nIn a production website, this would redirect to a secure checkout page.`);
            } else {
                // For other bottles, show invitation modal
                document.getElementById('invitationModal').classList.add('active');
                document.body.style.overflow = 'hidden';
            }
        }

        function closeInvitationModal() {
            document.getElementById('invitationModal').classList.remove('active');
            document.getElementById('keeper1').value = '';
            document.getElementById('keeper2').value = '';
            document.body.style.overflow = 'auto';
        }

        function submitNomination() {
            const keeper1 = document.getElementById('keeper1').value.trim();
            const keeper2 = document.getElementById('keeper2').value.trim();
            
            if (!keeper1 || !keeper2) {
                alert('Please provide the names of both nominators.');
                return;
            }
            
            alert(`Thank you for your request to acquire ${selectedBottle}.\n\nNominators:\n1. ${keeper1}\n2. ${keeper2}\n\nOur Master Keeper will verify your nomination and contact you within 7-10 business days.\n\nPer Tempus, Per Ignem, Per Aquam`);
            
            closeInvitationModal();
        }
    </script>
